{
    "name": "DeepLab",
    "n_gpu": 2,
    "use_synch_bn": true,

    "arch": {
        "type": "DeepLab",
        "args": {
            "backbone": "resnet101",
            "freeze_bn": false,
            "freeze_backbone": false
        }
    },

    "train_loader": {
        "type": "VOC",
        "args":{
            "data_dir": "datasets",
            "batch_size": 16,
            "base_size": 400,
            "crop_size": 256,
            "augment": false,
            "shuffle": true,
            "scale": false,
            "flip": false,
            "rotate": false,
            "blur": false,
            "split": "train_total",
            "num_workers": 1
        }
    },

    "val_loader": {
        "type": "VOC",
        "args":{
            "data_dir": "datasets",
            "batch_size": 8,
            "crop_size": 256,
            "val": true,
            "split": "val_total",
            "num_workers": 1
        }
    },

    "optimizer": {
        "type": "SGD",
        "differential_lr": true,
        "args":{
            "lr": 0.01,
            "weight_decay": 1e-4,
            "momentum": 0.9
        }
    },

    "loss": "CE_DiceLoss",
    "ignore_index": 255,
    "lr_scheduler": {
        "type": "Poly",
        "args": {}
    },

    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 5,
  
        "monitor": "max Mean_IoU",
        "early_stop": 10,
        
        "tensorboard": true,
        "log_dir": "saved/runs",
        "log_per_iter": 20,

        "val": true,
        "val_per_epochs": 1
    }
}